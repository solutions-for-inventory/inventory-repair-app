OrgUnit_ sql=t_org_unit
    Id sql=org_unit_id
    name Text
    org_code Text
    webpage Text
    facebook Text
    status EntityStatus
    locale Locale
    createdDate UTCTime
    modifiedDate UTCTime Maybe
    UniqueOrgUnit org_code
    deriving Typeable Show

